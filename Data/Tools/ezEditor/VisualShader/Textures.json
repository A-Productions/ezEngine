{
  "BaseTexture" :
  {
    "Color" : "140, 13, 38",
    "CodeMaterialParams" : "
Texture2D BaseTexture;
",

    "CodePixelSamplers" : "
Texture2D BaseTexture;
SamplerState BaseTexture_AutoSampler;
",
    "InputPins" :
    [
      {
        "Name" : "UV",
        "Type" : "float2",
        "Color" : "50, 50, 128",
        "Fallback" : "Input.TexCoords",
        "Tooltip" : "Optional UV coordinates to sample the texture. Default uses the mesh UV coordinates."
      }
    ],

    "OutputPins" :
    [
      {
        "Name" : "RGBA",
        "Type" : "float4",
        "Color" : "255, 255, 255",
        "Inline" : "BaseTexture.Sample(BaseTexture_AutoSampler, ToFloat2($in0))"
      },

      {
        "Name" : "Red",
        "Type" : "float",
        "Color" : "255, 0, 0",
        "Inline" : "BaseTexture.Sample(BaseTexture_AutoSampler, ToFloat2($in0)).x"
      },

      {
        "Name" : "Green",
        "Type" : "float",
        "Color" : "0, 255, 0",
        "Inline" : "BaseTexture.Sample(BaseTexture_AutoSampler, ToFloat2($in0)).y"
      },

      {
        "Name" : "Blue",
        "Type" : "float",
        "Color" : "0, 0, 255",
        "Inline" : "BaseTexture.Sample(BaseTexture_AutoSampler, ToFloat2($in0)).z"
      },

      {
        "Name" : "Alpha",
        "Type" : "float",
        "Color" : "230, 230, 153",
        "Inline" : "BaseTexture.Sample(BaseTexture_AutoSampler, ToFloat2($in0)).w"
      }
    ],
  },


