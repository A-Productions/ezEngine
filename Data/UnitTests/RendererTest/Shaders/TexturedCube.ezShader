[PLATFORMS] 
ALL

[PERMUTATIONS]

[RENDERSTATE]

[VERTEXSHADER]

#include "Common.inc"

VS_OUT main(VS_IN Input)
{
  VS_OUT RetVal;
  RetVal.pos = mul(mvp, float4(Input.pos, 1.0));
  RetVal.texcoord0 = Input.pos.xy + 0.5;
  RetVal.normal = Input.pos.xyz;

  return RetVal;
}

[PIXELSHADER]

#include "Common.inc"

TextureCube DiffuseTexture : register(t1);
SamplerState DiffuseTextureSampler : register(s1);

float4 main(PS_IN Input) : SV_Target
{
  return DiffuseTexture.Sample(DiffuseTextureSampler, normalize(Input.normal));
}
